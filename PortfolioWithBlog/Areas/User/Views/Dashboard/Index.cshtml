@model List<NewsFeedUserListVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}


<div class="pagetitle">
    <h1>Dashboard</h1>
</div><!-- End Page Title -->

<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">
                @await Component.InvokeAsync("Claims")
            </div>
            <!-- Card with an image on left -->
            @foreach (var item in Model)
            {
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/images/@Model.Last().FileName" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@Model.Last().Title</h5>
                                <p class="card-text">@Model.Last().Description</p>
                            </div>
                        </div>
                    </div>
                </div>
                break;
                <!-- End Card with an image on left -->
            }

        </div><!-- End Left side columns -->
        <!-- Right side columns -->
        <div class="col-lg-4">

            <!-- News & Updates Traffic -->
            @await Component.InvokeAsync("NewsFeed")

        </div><!-- End Right side columns -->

    </div>
</section>

