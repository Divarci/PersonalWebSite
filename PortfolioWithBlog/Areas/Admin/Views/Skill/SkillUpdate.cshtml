@model SkillUpdateVM
@{
    ViewData["Title"] = "SkillUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<body>
    <div class="pagetitle">
        <h1>Update Skill</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Skill" asp-action="SkillList">Skills</a></li>
                <li class="breadcrumb-item active">Update</li>
            </ol>
        </nav>
    </div>
    <section class="section">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-area="Admin" asp-controller="Skill" asp-action="SkillUpdate" method="post" class="row g-12">
                        <input type="hidden" asp-for="ResumeId" />
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RowVersion" />
                        <input type="hidden" asp-for="IsEdited" />
                        <input type="hidden" asp-for="IsPublished" />
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="col-12">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" type="text" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Value" class="form-label"></label>
                            <input asp-for="Value" type="number" class="form-control">
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <br />
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </section>
</body>




