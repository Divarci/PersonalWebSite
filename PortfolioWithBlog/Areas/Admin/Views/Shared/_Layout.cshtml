<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Admin Panel</title>
    <meta content="Software developer website. I have qualification with ASP.NET CORE" name="description">
    <meta content="Software, Developer, Website, Microsoft, Asp.Net Core" name="keywords">

    <!-- Favicons -->
    <link href="~/NiceAdmin/assets/img/favicon.png" rel="icon">
    <link href="~/NiceAdmin/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/NiceAdmin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/NiceAdmin/assets/css/style.css" rel="stylesheet">

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="logo d-flex align-items-center">
                <img src="~/NiceAdmin/assets/img/logo.png" alt="Software Developer">
                <span class="d-none d-lg-block">@User.Identity!.Name</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->
        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li> <a class="btn btn-outline-info me-2" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i></a></li>
                <li> <a class="btn btn-outline-success me-2" asp-area="User" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-person-circle"></i></a></li>
                <li> <a class="btn btn-outline-danger me-2" asp-route-returnUrl="/Home/Index" asp-area="User" asp-controller="User" asp-action="LogOut"><i class="bi bi-box-arrow-right"></i></a></li>
            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-heading">Web Site Panel</li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Resume" asp-action="ActiveResumeList">
                    <i class="bi bi-newspaper"></i>
                    <span>Resume List</span>
                </a>
            </li><!-- End Resume List Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="HomePage" asp-action="HomePageList">
                    <i class="bi bi-gear"></i>
                    <span>Home Page Settings</span>
                </a>
            </li><!-- End Home Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="AboutMe" asp-action="AboutMeListWithAllChildren">
                    <i class="bi bi-person-circle"></i>
                    <span>About Me</span>
                </a>
            </li><!-- End AboutMe Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Skill" asp-action="SkillList">
                    <i class="bi bi-shuffle"></i>
                    <span>Skills</span>
                </a>
            </li><!-- End AboutMe Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Experience" asp-action="ExperienceList">
                    <i class="bi bi-tools"></i>
                    <span>Experience</span>
                </a>
            </li><!-- End Experience Page Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Education" asp-action="EducationList">
                    <i class="bi bi-book"></i>
                    <span>Education</span>
                </a>
            </li><!-- End Education Page Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Certificate" asp-action="CertificateList">
                    <i class="bi bi-bookmark-star"></i>
                    <span>Certificate</span>
                </a>
            </li><!-- End Certificate Page Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="ProjectCategory" asp-action="ProjectCategoryList">
                    <i class="bi bi-code-square"></i>
                    <span>Project Categories</span>
                </a>
            </li><!-- End ProjectCategory Page Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Project" asp-action="ProjectList">
                    <i class="bi bi-code-slash"></i>
                    <span>Projects</span>
                </a>
            </li><!-- End Project Page Nav -->


            <li class="nav-heading">Users & Communication</li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Admin" asp-action="UserList">
                    <i class="bi bi-people"></i>
                    <span>Users</span>
                </a><!-- End Users Page Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Message" asp-action="MessageList">
                    <i class="bi bi-envelope"></i>
                    <span>Messages</span>
                </a>
            </li><!-- End Settings Page Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="NewsFeed" asp-action="GetNewsList">
                    <i class="bi bi-newspaper"></i>
                    <span>News Feed</span>
                </a>
            </li><!-- End NewsFeed Page Nav -->

        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        @RenderBody()

    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/NiceAdmin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/NiceAdmin/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/quill/quill.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/NiceAdmin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/php-email-form/validate.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("NToastNotify")
    @await RenderSectionAsync("Scripts", required: false)


    <!-- Template Main JS File -->
    <script src="~/NiceAdmin/assets/js/main.js"></script>

</body>

</html>