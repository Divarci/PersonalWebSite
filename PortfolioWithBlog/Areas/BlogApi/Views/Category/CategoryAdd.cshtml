@model CategoryAddVM
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Areas/BlogApi/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <div class="pagetitle" style="display: flex; align-items: center;">
        <h1>New Category</h1>
    </div><!-- End Page Title -->
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="BlogApi" asp-controller="Dashboard" asp-action="index">Dashboard</a></li>
            <li class="breadcrumb-item active">New Category</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<form asp-area="BlogAPi" asp-controller="Category" asp-action="CategoryAdd" method="post" class="row g-12">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-12">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="text-center">
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>



