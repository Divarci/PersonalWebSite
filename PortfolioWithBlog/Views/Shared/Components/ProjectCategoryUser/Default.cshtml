@model List<ProjectCategoryForUserListVM>

    <!-- ======= Our Portfolio Section ======= -->
    <section class="breadcrumbs" id="Projects">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>My Portfolio</h2>
            </div>

        </div>
    </section><!-- End Our Portfolio Section -->
    <!-- ======= Portfolio Section ======= -->
    <section class="portfolio">
        <div class="container">
            <!-- ======= Category Section ======= -->
            <div class="row">
                <div class="col-lg-12">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">All</li>
                        @foreach (var item in Model)
                        {
                            <li data-filter=".filter-@item.Title">@item.Title</li>
                        }

                    </ul>
                </div>
            </div>
            <!-- ======= Projects Section ======= -->

            <div class="row portfolio-container" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
                @foreach (var categories in Model)
                {
                    foreach (var projects in categories.Projects)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-wrap filter-@categories.Title">
                            <div class="portfolio-item">
                                <img src="~/images/@projects.Images.FirstOrDefault().FileName" class="img-fluid" alt="Software and Website">
                                <div class="portfolio-info">
                                    <h3>@projects.Title</h3>
                                    <div>
                                        <a data-bs-toggle="modal" data-bs-target="#fullscreenModal-@projects.Id" title="Portfolio Details"><i class="bx bx-link"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- ======= project detail modal Section ======= -->

                        <div class="modal fade" id="fullscreenModal-@projects.Id" tabindex="-1">
                            <div class="modal-dialog modal-xl">
                                <div class="modal-content " >
                                    <div class="modal-header">
                                        <h5 class="modal-title">@projects.ProjectDate</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">


                                        <div class="row gy-4">

                                            <div class="col-lg-8">
                                                <div class="portfolio-details-slider swiper">
                                                    <div class="swiper-wrapper align-items-center">
                                                        @foreach (var images in projects.Images)
                                                        {
                                                            <div class="swiper-slide">
                                                                <img src="~/images/@images.FileName" class="img-fluid" alt="Software and Website">
                                                            </div>
                                                        }

                                                    </div>
                                                    <div class="swiper-pagination"></div>
                                                </div>
                                            </div>

                                            <div class="col-lg-4">
                                                <div class="portfolio-info">
                                                    <h3>Project information</h3>
                                                    <ul>
                                                        <li><strong>Category</strong>: @categories.Title</li>
                                                    </ul>
                                                </div>
                                                <div class="portfolio-description">
                                                    <h2>@projects.Title</h2>
                                                    <p>
                                                        @projects.Description
                                                    </p>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer d-flex justify-content-center">
                                        <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- End Full Screen Modal-->
                    }
                }

            </div>

        </div>
    </section><!-- End Portfolio Section -->
