@model List<HomePageUserListVM>

<!-- ======= Header ======= -->
<header id="header" class="fixed-top d-flex align-items-center header-transparent">
    <div class="container d-flex justify-content-between align-items-center">

        <div class="logo">
            <!-- Uncomment below if you prefer to use an image logo -->
            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="Software Developer" class="img-fluid"></a>

        </div>

        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="active " asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a href="#AboutMe">About</a></li>
                <li><a href="#Projects">Portfolio</a></li>               
                <li><a href="#Contact">Contact Me</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li> <a class="text-warning" asp-area="User" asp-controller="Dashboard" asp-action="Index">@User.Identity.Name </a></li>
                }
                else
                {
                    <li> <a class="text-danger" asp-area="User" asp-controller="Dashboard" asp-action="Index">Login </a></li>
                }


            </ul>


            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->

    </div>
</header><!-- End Header -->
<!-- ======= Hero No Slider Section ======= -->
<section id="hero-no-slider" class="d-flex justify-content-center align-items-center">
    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                @foreach (var item in Model)
                {
                    <h2>@item.FullName</h2>

                    <p>@item.Description</p>
                    <a href="~/images/@item.ResumeCvFileName" alt="Resume" download="~/images/@item.ResumeCvFileName" class="btn-get-started ">Download CV</a>
                    <a asp-controller="BlogApi" asp-action="Index" class="btn-get-started-new ">Browse Me</a>
                    <div class="social">
                        @if (!string.IsNullOrEmpty(@item.SocialMediaListVM.Twitter))
                        {
                            <a href="@item.SocialMediaListVM.Twitter"><i class="bi bi-twitter"></i></a>
                        }
                        @if (!string.IsNullOrEmpty(@item.SocialMediaListVM.Youtube))
                        {
                            <a href="@item.SocialMediaListVM.Youtube"><i class="bi bi-youtube"></i></a>
                        }
                        @if (!string.IsNullOrEmpty(@item.SocialMediaListVM.GitHub))
                        {
                            <a href="@item.SocialMediaListVM.GitHub"><i class="bi bi-github"></i></a>
                        }
                        @if (!string.IsNullOrEmpty(@item.SocialMediaListVM.LinkedIn))
                        {
                            <a href="@item.SocialMediaListVM.LinkedIn"><i class="bi bi-linkedin"></i></a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section><!-- End Hero No Slider Sectio -->
