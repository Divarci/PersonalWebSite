@model MessageAddVM

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<!-- ======= Contact Section ======= -->
<section class="breadcrumbs" id="Contact">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Contact</h2>
        </div>

    </div>
</section><!-- End Contact Section -->
@await Component.InvokeAsync("ContactMeUser")


<!-- ======= Contact Section ======= -->
<section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("SendMessage", "Home", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly"></div>
                <div class="col-lg-12 php-email-form">
                    <div class="row ">
                        <div class="col-md-6 form-group">
                            <input asp-for="Sender" type="text" name="Sender" class="form-control" id="name" placeholder="Your Name" >
                            <span asp-validation-for="Sender" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input asp-for="Email" type="email" class="form-control" name="Email" id="email" placeholder="Your Email" >
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="Subject" type="text" class="form-control" name="Subject" id="subject" placeholder="Subject" >
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <textarea asp-for="Description" class="form-control" name="Description" rows="5" placeholder="Message" ></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="text-center"><button type="submit">Send Message</button></div>
                </div>
            }
        </div>
    </div>
</section><!-- End Contact Section -->
